{% extends 'base.jinja' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <form method="POST">
                    <div class="mb-3">
                        <label for="password" class="form-label">New</label>
                        <input type="password" id="password" name="password" class="form-control">
                    </div>
                    {% if error %}
                        <div class="alert alert-danger mt-2" role="alert">
                            {{ error }}
                        </div>
                    {% endif %}
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary" type="button">Update password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}