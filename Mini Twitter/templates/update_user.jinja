{% extends 'base.jinja' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <form method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="fullname" class="form-label">Full name</label>
                        <input type="text" id="fullname" name="fullname" class="form-control" value="{{g.user.fullname}}">
                    </div>
                    <div class="mb-3">
                      <label for="bio" class="form-label">Bio</label>
                      <textarea class="form-control" name="bio" id="bio" rows="3">{{g.user.bio}}</textarea>
                    </div>
                    <div class="mb-3">
                      <label for="profile_picture" class="form-label">Profile picture</label>
                      <input type="file" class="form-control" name="profile_picture" id="profile_picture" placeholder="nofile" aria-describedby="profile_picture_help">
                      <div id="profile_picture_help" class="form-text">Choose a new profile picture if you want</div>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger mt-2" role="alert">
                            {{ error }}
                        </div>
                    {% endif %}
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary" type="button">Update information</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}